generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  documents Document[]
}

model Document {
  id String @id @default(uuid())
  title String
  content String @db.Text
  userId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)//if the user is deleted, the documents are also deleted ("Cascade")

  //This creates a database index on the userId column, which can improve query performance (by filtering the documents by the userId)
  //essential for lookups of documents by user
  @@index([userId])
}

